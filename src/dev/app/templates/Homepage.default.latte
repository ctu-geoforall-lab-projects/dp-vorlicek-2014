{block title}Homepage{/block}

{block content}

<h1>Co se zde aktuálně děje</h1>
{if $user->isInRole('admin')}
	{control addNewsForm}
{/if}

{if count($news) != 0}
	<div class="span7">
		<table class="table table-bordered">
			<tr n:foreach="$news as $new">
				<td><span class="pull-right">{$new->created|date: "d.m.Y H:i"}</span><br>
					<p>{$new->note}</p>
				</td>
			</tr>
		</table>
	</div>
{else}
	<i>Nic se zde zatím neděje.</i>
{/if}

{/block}
