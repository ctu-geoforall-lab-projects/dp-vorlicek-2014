<script type="text/javascript">
	function shareImage() {
		var url = "http://" + location.host + location.pathname;
				window.open(
						'https://www.facebook.com/sharer/sharer.php?u=' + encodeURIComponent(url),
						'facebook-share-dialog',
						'width=626,height=436');
				return;
			}
</script>
